<Window x:Class="Notepad3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad3"
        mc:Ignorable="d"
        Title="Untitled - Notepad3" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <!-- Menus -->
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="New"/>
                    <MenuItem Header="Open..."/>
                    <MenuItem Header="Save"/>
                    <MenuItem Header="Save As..."/>
                    <MenuItem Header="Page Setup" />
                    <MenuItem Header="Print..." />
                    <MenuItem Header="Exit" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="Undo"/>
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Paste"/>
                    <MenuItem Header="Delete" />
                    <MenuItem Header="Search..." />
                    <MenuItem Header="Find" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <!-- Editing panels: RTF view and plain text view for switching-->
        <RichTextBox Grid.Row="1" Visibility="Hidden" IsEnabled="False" />
        <TextBox Grid.Row="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Visibility="Visible" IsEnabled="True" />
    </Grid>
</Window>
